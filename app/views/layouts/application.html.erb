<!DOCTYPE html>
<html>
  <head>
    <title>Photography</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" id="nav">
      <div class="container-fluid">
        <input type="checkbox" id="navbar-toggle-cbox">
        <div class="navbar-header">
          <button for="navbar-toggle-cbox" id="nav-ham" class="navbar-toggle collapsed"  data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar top-bar"></span>
            <span class="icon-bar bottom-bar"></span>
          </button>
          <a class="navbar-brand" id="header" href="/">Britton Baumann</a>
        </div>
        <div id="navbar" class="navbar-right navbar-collapse collapse ">
          <ul class="nav navbar-nav">
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/posts">Blog</a></li>
          </ul>
        </div>
      </div>
    </nav> <!-- /Nabvar -->


    <%= yield %>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <p><small>Copyright &copy; Your Website 2017</small></p>
      </div>
    </footer> <!-- /Footer -->
  </body>
</html>
