<section class="container-fluid" id="blog-container" >
  <div class="row">
    <h1 class="col-xs-12 text-center blog-head">Great Britton Blog</h1>
    <div class="col-xs-12 col-sm-8 text-center blog-posts">
      <% @posts.each do |post| %>
        <%= link_to post do %>
          <h3><%= post.title %></h3>
          <%= image_tag(post.image, :class => "col-xs-12") %>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4 text-center blog-list">
      <h3>list</h3>
      <%= image_tag("little_gy.jpg", :class => "col-xs-12") %>
    </div>
  </div>
</section>
