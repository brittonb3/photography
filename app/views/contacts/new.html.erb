
<section class="container-fluid">
  <div class="row">
    <%= image_tag("dark_mountain.jpg", :alt => "Alaska", :class => "col-xs-12 contact-img") %>
    <div class="col-xs-12 text-center  heading">
      <h4 class="text-left touch">WAYS TO GET IN TOUCH</h4>
      <div class="col-xs-12 contact-social">
        <div class="col-xs-12 col-sm-6 text-left social-col-1">
          <a href="https://www.instagram.com/greatbritton85/" class="social" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Instagram: @greatbritton85</p><br/>
          <a href="https://twitter.com/GreatBritton85" class="social" target="_blank"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Twitter: @greatbritton85</p><br/>
          <a href="https://www.facebook.com/britt.baumann.7" class="social" target="_blank"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Facebook: Britt Baumann</p><br/>
        </div>
        <div class="col-xs-12 col-sm-6 text-left social-col-2">
          <a href="https://www.instagram.com/britt.baumann/" class="social" target="_blank"><i class="fa fa-envelope fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Email: greatbrittonphotography@gmail.com</p><br/>
          <a href="https://www.instagram.com/britt.baumann/" class="social" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Instagram: @britt.baumann</p><br/>
          <a href="https://www.instagram.com/britt.baumann/" class="social" target="_blank"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
          <p class="social-label">Email: brittonbaumann@gmail.com</p><br/>
        </div>
      </div>
      <h4 class="text-left touch">CONTACT FORM</h4>
      <div class="col-xs-12 text-center">
        <%= form_for @contact do |f| %>
          <%= f.label :name, :class => 'labels' %><br />
          <%= f.text_field :name, :class => 'label-box', required: true %>

          <br />

          <%= f.label :email, :class => 'labels' %><br />
          <%= f.email_field :email, :class => 'label-box', required: true %>

          <br />

          <%= f.label :message, :class => 'labels' %><br />
          <%= f.text_area :message, :class => 'label-box', as: :text %>

          <br />

          <div class="hidden">
            <%= f.label :nickname %><br />
            <%= f.text_field :nickname, hint: 'leave this field blank' %>
          </div>

          <%= f.submit 'Send Message', class: "button" %><br />

        <% end %>
      </div>
    </div>
  </div>
</section>
